<UserControl x:Class="Lama.UI.UC.TournoiControls.ClassementControls.ClassementUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lama.UI.UC.TournoiControls.ClassementControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>

        <Style TargetType="Label" x:Key="stats">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderBrush" Value="{StaticResource IdealForegroundDisabledBrush}" />
            <Setter Property="BorderThickness" Value="0 0 0 1" />
            <Setter Property="Margin" Value="0 20 0 20" />
            <Setter Property="Foreground" Value="{StaticResource AccentBaseColorBrush}" />
            <Style.Triggers>
                <Trigger Property="Content" Value="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Label" x:Key="menu">
            <Setter Property="Margin" Value="0 8 0 0" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Foreground" Value="{StaticResource AccentColorBrush}" />
        </Style>

        <Style TargetType="DataGridCell">
            <Style.Setters>
                <Setter Property="TextBlock.TextAlignment" Value="Center" />
            </Style.Setters>
        </Style>

        <Style TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="35 0 35 0" />
        </Style>

    </UserControl.Resources>

    <Grid>

        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Label Style="{StaticResource menu}" Content="Statistique" />
            <ListView ItemsSource="{Binding lstStatistiques.Stats}">
                <ItemsControl.ItemTemplate>

                    <DataTemplate>
                        <Label Content="{Binding Key}" />
                    </DataTemplate>

                </ItemsControl.ItemTemplate>
            </ListView>
        </StackPanel>-->

        <WrapPanel Grid.Column="1" Margin="20 0 0 0">

            <ScrollViewer>
                <StackPanel>
                    <Label Style="{StaticResource stats}" Content="Statistiques par équipe" />
                    <DataGrid ItemsSource="{Binding Equipes}" CanUserAddRows="False" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn FontSize="10" Binding="{Binding Nom}" Header="Nom" />
                            <DataGridTextColumn Binding="{Binding lstStatistiques.Stats[0].Value}" Header="Élimination(s)" />
                            <DataGridTextColumn Binding="{Binding lstStatistiques.Stats[1].Value}" Header="Mort(s)" />
                            <DataGridTextColumn Binding="{Binding lstStatistiques.Stats[2].Value}" Header="Assistance(s)" />
                            <DataGridTextColumn Binding="{Binding lstStatistiques.Stats[3].Value}" Header="Batiment(s) détruit(s)" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </ScrollViewer>

            <ScrollViewer>
                <StackPanel>
                    <Label Style="{StaticResource stats}" Content="Statistiques par joueurs" />
                    <DataGrid ItemsSource="{Binding Joueurs}" CanUserAddRows="False" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn FontSize="10" Binding="{Binding Nom}" Header="Nom" />
                            <DataGridTextColumn Binding="{Binding lstStatistiques.Stats[0].Value}" Header="Élimination(s)" />
                            <DataGridTextColumn Binding="{Binding lstStatistiques.Stats[1].Value}" Header="Mort(s)" />
                            <DataGridTextColumn Binding="{Binding lstStatistiques.Stats[2].Value}" Header="Assistance(s)" />
                            <DataGridTextColumn Binding="{Binding lstStatistiques.Stats[3].Value}" Header="Batiment(s) détruit(s)" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </ScrollViewer>

            <!--<DataGrid ItemsSource="{Binding Joueurs}">
                    <ItemsControl.ItemTemplate>

                        <DataTemplate>
                            <Label Content="{Binding}" />
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </DataGrid>-->

        </WrapPanel>
    </Grid>
</UserControl>
