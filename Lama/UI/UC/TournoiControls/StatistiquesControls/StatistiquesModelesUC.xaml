<UserControl x:Class="Lama.UI.UC.TournoiControls.StatistiquesControls.StatistiquesModelesUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lama.UI.UC.TournoiControls.StatistiquesControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>

        <Style TargetType="Label" x:Key="menu">
            <Setter Property="BorderBrush" Value="{StaticResource IdealForegroundDisabledBrush}" />
            <Setter Property="BorderThickness" Value="0 0 0 1" />
            <Setter Property="Foreground" Value="{StaticResource AccentBaseColorBrush}" />
        </Style>

    </UserControl.Resources>

    <StackPanel>
        <Label Style="{StaticResource menu}" Content="Légende" />
        <WrapPanel VerticalAlignment="Center" Margin="10">
            <TextBlock FontSize="10" Foreground="Lime" Text="Gagnant" />
            <TextBlock FontSize="10" Foreground="{StaticResource IdealForegroundDisabledBrush}" Text=" - Élimination(s)  Mort(s)  Assistance(s)  Batiment(s) détruit(s)" />
        </WrapPanel>
    </StackPanel>

</UserControl>
