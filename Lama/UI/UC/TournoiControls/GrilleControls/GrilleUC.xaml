<UserControl x:Class="Lama.UI.UC.TournoiControls.GrilleControls.GrilleUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lama.UI.UC.TournoiControls.GrilleControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <Style TargetType="Label" x:Key="emphase">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="50" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Foreground" Value="{StaticResource AccentBaseColorBrush}" />
        </Style>
    </UserControl.Resources>

    <StackPanel Margin="0 20 0 20">
        <local:ToursUC  />
        <Button Name="btnGenererTour" Content="Generer le prochain tour" Click="GenererTour" />
        <Label Style="{StaticResource emphase}" Content="{Binding Vainqueur.Nom}" Foreground="Lime" />
    </StackPanel>
</UserControl>
