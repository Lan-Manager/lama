<UserControl x:Class="Lama.UI.UC.TournoiControls.GrilleControls.EquipesUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lama.UI.UC.TournoiControls.GrilleControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>

        <Style TargetType="Label" x:Key="equipe">
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Padding" Value="30 10 30 20" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding EstGagnant}" Value="True">
                    <Setter Property="Foreground" Value="Lime" />
                </DataTrigger>
                <!--<DataTrigger Binding="{Binding EstGagnant}" Value="False">
                    <Setter Property="Foreground" Value="Red" />
                </DataTrigger>-->
                <DataTrigger Binding="{Binding EstGagnant}" Value="{x:Null}">
                    <Setter Property="Foreground" Value="{StaticResource IdealForegroundColorBrush}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="StackPanel" x:Key="sp">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="35 0 35 0" />
        </Style>

        <Style TargetType="StackPanel" x:Key="mouseover">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=WrapPanel}, Path=IsMouseOver}" Value="True" >
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <ItemsPanelTemplate x:Key="wp">
            <WrapPanel>
                <WrapPanel.Style>
                    <Style TargetType="WrapPanel">
                        <Setter Property="Orientation" Value="Horizontal" />
                        <Setter Property="Width" Value="auto" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                </WrapPanel.Style>
            </WrapPanel>
        </ItemsPanelTemplate>

    </UserControl.Resources>

    <ItemsControl ItemsSource="{Binding Equipes}" ItemsPanel="{StaticResource wp}">

        <ItemsControl.ItemTemplate>
            <DataTemplate>

                <StackPanel>
                    <Label Style="{StaticResource equipe}" Content="{Binding Nom}" />

                    <StackPanel Style="{StaticResource mouseover}">

                        <DataGrid ItemsSource="{Binding lstStatistiques.Stats}" HeadersVisibility="None" CanUserAddRows="False" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn FontSize="10" Binding="{Binding Key}" IsReadOnly="True" />
                                <DataGridTextColumn Binding="{Binding Value}"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <RadioButton FlowDirection="RightToLeft" IsChecked="{Binding EstGagnant}" HorizontalAlignment="Center" GroupName="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.Nom}">
                            <Label FlowDirection="LeftToRight" Content="Vainqueur"  Padding="20 30 20 30" />
                        </RadioButton>

                    </StackPanel>
                </StackPanel>

            </DataTemplate>
        </ItemsControl.ItemTemplate>

    </ItemsControl>
</UserControl>

